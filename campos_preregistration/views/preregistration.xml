				<field name="name">Pioneering Poles on Registration</field>
				<field name="model">event.registration.polelist</field>
				<field name="arch" type="xml">
					<tree>
						<field name="registration_id"/>
						<field name="pioneeringpole_id"/>
						<field name="polecount"/>
					</tree>
				</field>
			</record> 
		<act_window id="action_event_registration_pioneeringpoles_on_registrations"
		name="Pioneering Poles on Registration"
		res_model="event.registration.polelist"
		view_mode="tree,form" />		
		<menuitem id="menu_action_preregistration_menu_pioneeringpolelist" parent="menu_event_preregistration" name="Pioneering Poles List" action="action_event_registration_pioneeringpoles_on_registrations" groups="campos_event.group_campos_admin" sequence="99" />-->

		
		
		<record id="geoengine_vector_layer_prereg" model="geoengine.raster.layer">
            <field name="raster_type">osm</field>
            <field name="name">pre_reg background</field>
            <field name="view_id" ref="ir_ui_view_geo_pre_reg"/>
            <field eval="0" name="overlay"/>
        </record>
        
        <record id="geoengine_vector_participant" model="geoengine.vector.layer">
            <field name="geo_field_id"
                ref="campos_preregistration.field_event_registration_geo_point"/>
            <field name="name">Participant location</field>
            <field eval="6" name="sequence"/>
            <field name="view_id" ref="ir_ui_view_geo_pre_reg"/>
            <field name="geo_repr">basic</field>
            <field eval="1" name="nb_class"/>
            <field name="begin_color">#FF680A</field>
        </record>
        
        <record id="geoengine_vector_layer_prereg_tree" model="geoengine.raster.layer">
            <field name="raster_type">osm</field>
            <field name="name">Participant background</field>
            <field name="view_id" ref="ir_ui_view_geo_pre_reg"/>
            <field eval="0" name="overlay"/>
        </record>
        
        <record id="geoengine_vector_layer_pre_reg_colored_on_cnt" model="geoengine.vector.layer">
            <field name="geo_field_id" ref="campos_preregistration.field_event_registration_geo_point"/>
            <field name="name">Group colored on total pre reg</field>
            <field name="classification">quantile</field>
            <field eval="6" name="sequence"/>
            <field name="view_id" ref="ir_ui_view_geo_pre_reg"/>
            <field name="geo_repr">proportion</field>
            <field eval="1" name="nb_class"/>
            <field name="attribute_field_id" ref="campos_preregistration.field_event_registration_pre_reg_cnt"/>
            <field name="begin_color">#4B69FD</field>
        </record>
        </data>
</openerp>